<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialoglayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message_box"
    tools:ignore="UnknownIdInLayout,HardcodedText,SpUsage,ContentDescription,TextFields" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userimageView" >

        <TextView
            android:id="@+id/usernametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Medium Text"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/useridtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/usernametextView"
            android:text="Small Text"
            android:textColor="#FFFFFF"
            android:textSize="7dp" />

        <ImageView
            android:id="@+id/OKimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/notif_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/userimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2.4dp"
        android:layout_marginTop="1.9dp"
        android:src="@drawable/notif_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userimageView"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="27dp" android:id="@+id/relativeLayout2">

        <EditText
            android:id="@+id/tageditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:hint="Anirudh"
            android:textSize="7dp" />

        <EditText
            android:id="@+id/msgeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:hint="How do you love this place?"
            android:inputType="textMultiLine"
            android:textSize="8dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/galleryimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginRight="17dp"
        android:src="@drawable/notif_icon" />

    <ImageView
        android:id="@+id/cameraimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignTop="@+id/galleryimageView"
        android:layout_marginLeft="14dp"
        android:src="@drawable/notif_icon" />

</RelativeLayout>