<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.example.letsstart.AutoFill.CustomMultiAutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:hint="your friends here"
        android:background="@drawable/typing_screen_background"
        android:id="@+id/editTextPrivate"
        android:textColor="@android:color/black"
        android:editable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical|left" />


        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/typing_screen_background"
        android:layout_weight="0.96"
        android:weightSum="1"
        android:layout_gravity="left|top">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/private_message"
        android:layout_gravity="top"
        android:layout_weight="0.89"
        android:autoText="true"
        android:focusable="true"
        android:hint="Your message here .."
        android:gravity="top" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="39dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera"
            android:id="@+id/private_camera"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gallary"
            android:id="@+id/private_gallery"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

</LinearLayout>